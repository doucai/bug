		var phonetxt = $('.phone');
		var pcount = phone.length - 1; //参加人数
		var runing = true;
		var td = 100; //共10个名额
		var num = 0;
		var t;
		//开始停止
		function start() {
			if (runing) {
				runing = false;
				$('#btntxt').removeClass('start').addClass('stop');
				$('#btntxt').html('停止');
				startNum()
			} else {
				runing = true;
				$('#btntxt').removeClass('stop').addClass('start');
				$('#btntxt').html('开始');
				stop();
				zd();
			}
		}
		//循环参加名单
		function startNum() {
			num = Math.floor(Math.random() * pcount);
			phonetxt.html(phone[num]);
			t = setTimeout(startNum, 0);
		}
		//停止跳动
		function stop() {
			pcount = phone.length - 1;
			clearInterval(t);
			t = 0;
		}

		function zd() {
			if (td > 0) {
				//打印中奖者名单
				$('.list').prepend("<p>" + td + " -- " + phone[num] + "</p>");
				if (pcount <= 0) {
					alert("投票结束");
				}
				//将已中奖者从数组中"删除",防止二次中奖
				phone.splice($.inArray(phone[num], phone), 1);
			} else {
				alert("奖项抽取完毕")
			}
			td = td - 1;
		}
	</script>
