var p2Num = 5;//二等奖数量
var p3Num = 10;//三等奖数量
var p4Num = 20;//幸运奖数量
var p1Winner = new Array();//一等奖中奖者
var p2Winner = new Array();//二等奖中奖者
var p3Winner = new Array();//三等奖中奖者
var p4Winner = new Array();//幸运奖中奖者
var btn =true;//按钮状态未开始还是结束
var key =0;//中奖下标
var time=0;//定时器
 
//点击按钮
function start(){
    if(btn){
        if((p1Num<=0) && (p2Num<=0) && (p3Num<=0) && (p4Num<=0)){
            $("button").hide();
            alert("所有抽奖已结束");
        }else if($('select').val() == 4 && (p4Num<=0)){
            alert('幸运奖已抽取完毕，请选择其他奖项...');
        }else if($('select').val() == 3 && (p3Num<=0)){
            alert('三等奖已抽取完毕，请选择其他奖项...');
        }else if($('select').val() == 2 && (p2Num<=0)){
            alert('二等奖已抽取完毕，请选择其他奖项...');
        }else if($('select').val() == 1 && (p1Num<=0)){
            alert("一等奖已抽取完毕，请选择其他奖项...");
        }else{
            btn = false;
            $('button').removeClass('start').addClass('end').text("结束抽奖");
            startTrun();
        }
    }else{
        btn = true;
        $('button').removeClass("end").addClass("start").text("开始抽奖");
        endTrun();
 
        console.log(p4Num,p3Num,p2Num,p1Num);
    }
}
function runTime(){
    //$("button").show();
    clearInterval(time);
    time=setInterval('trunNum()',10);
}
var phonenum;
function trunNum(){
    key=Math.floor(Math.random()*(data.length-1));
    var tel=data[key].toString().substr(0, 3)+'****'+data[key].toString().substr(7);
    $(".result-box").text(tel);
    phonenum=tel
}
 
function startTrun(){
    runTime();
}
//停止转动数字
function endTrun(){
    var that=this;
    console.log(that.phonenum)
    clearInterval(time);
    if($("select").val() == 4){
        p4Winner.push(that.phonenum);
        $(".list").prepend("<p>第"+p4Num+"名："+that.phonenum+"</p>");
        p4Num--;
        if(p4Num == 0){
            $(".list").prepend("<p>幸运奖获得者</p>");
        }
        //将已中奖者从数组中"删除",防止二次中奖
        data.splice($.inArray(that.phonenum, data), 1)
    }else if($("select").val() == 3){
        p3Winner.push(that.phonenum);
        $(".list").prepend("<p>第"+p3Num+"名："+that.phonenum+"</p>");
        p3Num--;
        if(p3Num == 0){
            $(".list").prepend("<p>三等奖获得者</p>");
        }
        //将已中奖者从数组中"删除",防止二次中奖
        data.splice($.inArray(that.phonenum, data), 1)
    }else if($('select').val() == 2){
        p2Winner.push(that.phonenum);
         $(".list").prepend("<p>第"+p2Num+"名："+that.phonenum+"</p>");
        p2Num--;
        if(p2Num == 0){
            $(".list").prepend("<p>二等奖获得者</p>");
        }
        //将已中奖者从数组中"删除",防止二次中奖
        data.splice($.inArray(that.phonenum, data), 1)
    }else{
        p1Winner.push(that.phonenum);
       /*内定
        p1Num--;
        var neiding = p1Num+1; 
        $(".list").prepend("<p>第"+neiding+"名："+initP[p1Num]+"</p>"); */
         $(".list").prepend("<p>第"+p1Num+"名："+that.phonenum+"</p>");
         p1Num--;
        if(p1Num == 0){
            $(".list").prepend("<p>一等奖获得者</p>");
        }
    }
}
 
